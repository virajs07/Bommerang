<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Common attributes -->
	<attr name="text" format="reference" />
	<attr name="textColor" format="color" />
	<attr name="textSize" format="dimension" />

	<!-- Custom text view. Takes text,textColor and textSize as parameters see: 
		BoomerangTextView.java -->
	<declare-styleable name="BoomerangTextView">
		<attr name="text" />
		<attr name="textColor" />
		<attr name="textSize" />
	</declare-styleable>

	<!-- Custom image button. Takes drawable as parameters see: DashboardButton.java -->
	<declare-styleable name="DashboardButton">
		<attr name="text" />
		<attr name="textColor" />
		<attr name="textSize" />
		<attr name="drawable" format="string" />
	</declare-styleable>
</resources>
